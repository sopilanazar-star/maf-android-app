<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Основна тема додатка для Android 12+ -->
    <style name="Theme.MAFFootball" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- твої кольори -->
        <item name="colorPrimary">@color/maf_green</item>
        <item name="colorPrimaryVariant">@color/maf_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/maf_dark</item>

        <!-- НАЛАШТУВАННЯ СИСТЕМНОГО SPLASH ANDROID 12+ -->

        <!-- фон заставки: замість зеленого кольору – картинка стадіону -->
        <item name="android:windowSplashScreenBackground">@drawable/stadium_maf</item>

        <!-- логотип на заставці: твоє лого МАФ -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_maf_foreground</item>

        <!-- тривалість появи splash (0.4 с, можна змінити) -->
        <item name="android:windowSplashScreenAnimationDuration">400</item>

        <!-- без кольорового кружка під іконкою -->
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
    </style>

</resources>
