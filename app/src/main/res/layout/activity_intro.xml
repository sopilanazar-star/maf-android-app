<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/intro_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stadium_maf">

    <!-- М'яч (реальна картинка) -->
    <ImageView
        android:id="@+id/ballView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ball_maf"
        android:layout_gravity="center_vertical|start"
        android:scaleType="fitCenter" />

    <!-- Основний напис -->
    <TextView
        android:id="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="МИКОЛАЇВСЬКА АСОЦІАЦІЯ ФУТБОЛУ"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="40dp" />

    <!-- Постійний напис by Sopila -->
    <TextView
        android:id="@+id/byView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="by Sopila"
        android:textColor="#0A1D4F"
        android:textSize="12sp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp" />

</FrameLayout>
